@model  CherryStone.Web.ViewModels.Account.RegisterEmailViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<br>
<br>
<br>
<br>

<div class="row" style="margin-top:50px;margin-bottom:50px;">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-10">

        <h2 style="margin-bottom:50px;">Register by Email</h2><br />
        <form role="form" class="dv-form-bordered" action="/account/register-by-email" method="post">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <span class="">Email Address</span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.TextBoxFor(a => a.EmailAddress, new { @class = "form-control", placeholder = "EmailAddress" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <span class="">First Name</span>
                    </div>
                </div>

                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", placeholder = "First Name" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <span class="">Last Name</span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", placeholder = "Last Name" })
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <span class="">Gender</span>
                    </div>
                </div>
                <div class="col-sm-2">
                    <select class="form-control" id="Gender" name="Gender">
                        <option>Select Gender</option>
                        <option>Male</option>
                        <option>Female</option>
                    </select>
                </div>
      
            </div>
            <br>

            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <span class="">Password</span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <span class="">Confirm Password</span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                    </div>
                </div>
            </div>
            <div style="margin-bottom:50px;"></div>
            <button type="submit" id="submit" name="submit" class="btn btn-primary btn-blue noborder btn-rounded">Create Account</button>
        </form>
    </div>
    <div class="col-sm-1">
    </div>
</div>