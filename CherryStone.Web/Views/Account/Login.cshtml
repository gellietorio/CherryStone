@model CherryStone.Domain.DTO.Users.UserRequestDto
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<br>
<br>
<br>
<br>

<div class="row" style="margin-top:50px;margin-bottom:50px;">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-10">
        <h2 style="margin-bottom:50px;">Log in to CherryStone</h2><br>
        <p class="text-muted"> Doesn't have an account? <a href="~/Views/Account/Signup.cshtml"><u>Sign up</u></a>. </p>
        <form role="form" class="dv-form-bordered" action="~/Views/Home/Index.cshtml" method="post">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <br />
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <span class="">Email Address</span>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.TextBoxFor(a => a.EmailAddress, new { @class = "form-control", placeholder = "EmailAddress" })
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="form-group">
                        <span class="">Password</span>
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                </div>
            </div>
            <div style="margin-bottom:50px;"></div>
            <button type="submit" id="submit" name="submit" class="btn btn-primary btn-blue noborder btn-rounded">Create Account</button>
        </form>
    </div>
    <div class="col-sm-1">
    </div>
</div>